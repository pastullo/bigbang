<h3>Who would you like to bang?</h3>
<p>Only people who opted in are shown below</p>
<div class="row">
  
</div>
<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td>
          <%= image_tag(user.avatar.present? ? user.avatar.url(:thumb) : 'http://placehold.it/100x70') %>
          <%= user.name %></td>
          <td><%= user.email %></td>
        <td>

          <%= down_to_bang_cta(user) %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

